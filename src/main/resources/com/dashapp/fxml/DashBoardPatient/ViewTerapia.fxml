<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardPatient.VediTerapiaController">
   <children>
      <VBox spacing="20.0" style="-fx-padding: 20 30 80 0;" stylesheets="@../../css/input.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Dati Terapia" textFill="#cb6ce6">
               <VBox.margin>
                  <Insets bottom="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Roboto Black" size="14.0" />
               </font>
            </Label>

            <GridPane hgap="30.0" prefWidth="1000.0" vgap="30.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="1000.0" minWidth="10.0" prefWidth="1000.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="1000.0" minWidth="10.0" prefWidth="1000.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>

               <children>
                  <!-- Nome farmaco -->
                  <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="0" GridPane.vgrow="ALWAYS">
                     <children>
                        <Label styleClass="labelInput" text="Farmaco" />
                        <TextField fx:id="farmacoField" maxWidth="Infinity" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>

                  <!-- Data inizio -->
                  <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                     <children>
                        <Label styleClass="labelInput" text="Data inizio" />
                        <TextField fx:id="dataInizio" maxWidth="Infinity" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>

                  <!-- Data fine -->
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                     <children>
                        <Label styleClass="labelInput" text="Data fine" />
                        <TextField fx:id="dataFine" maxWidth="Infinity" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>

                  <!-- Assunzioni giornaliere -->
                  <VBox spacing="5.0" GridPane.columnIndex="0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
                     <children>
                        <Label styleClass="labelInput" text="Assunzioni giornaliere" />
                        <TextField fx:id="assunzioniField" maxWidth="Infinity" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>

                  <!-- Dose -->
                  <VBox spacing="5.0" GridPane.columnIndex="1" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2">
                     <children>
                        <Label styleClass="labelInput" text="Dose" />
                        <TextField fx:id="doseField" maxWidth="Infinity" style="-fx-background-color: transparent;" />
                     </children>
                  </VBox>
               </children>

               <padding>
                  <Insets bottom="9.0" />
               </padding>
            </GridPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
