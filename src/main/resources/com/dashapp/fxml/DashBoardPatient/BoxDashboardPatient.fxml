<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardPatient.BoxDashboardControllerPatient">

    <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <HBox alignment="CENTER_LEFT" prefHeight="39.0" prefWidth="560.0">
            <children>
                <Label fx:id="LabelBoxDashboard" style="-fx-text-fill: #333;">
                    <font>
                        <Font size="18" />
                    </font>
                </Label>

                <!-- Spacer tra Label e ImageView -->
                <Region HBox.hgrow="ALWAYS" />

                <ImageView fx:id="closeIcon" fitHeight="28.0" fitWidth="33.0" onMouseClicked="#BackToDashboard" pickOnBounds="true" preserveRatio="true" style="-fx-cursor: hand;">
                    <Image url="@../../images/close.png" />
                </ImageView>
            </children>
        </HBox>

        <VBox fx:id="bodyContainer" alignment="TOP_CENTER" prefHeight="153.0" prefWidth="560.0" />

    </VBox>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="40.0" />
    </padding>

</AnchorPane>
