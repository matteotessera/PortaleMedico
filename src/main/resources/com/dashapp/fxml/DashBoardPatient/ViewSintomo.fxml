<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefWidth="964.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardPatient.VediSintomoController">
   <children>
      <VBox spacing="20.0" style="-fx-padding: 20, 30, 20, 0;" stylesheets="@../../css/input.css" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <VBox spacing="20.0">
               <children>
                  <HBox alignment="CENTER_LEFT" stylesheets="@../../css/input.css">
                     <children>
                        <Label text="Dati sintomo" textFill="#0078ff">
                           <font>
                              <Font name="Roboto Black" size="14.0" />
                           </font>
                        </Label>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="modificaButton" mnemonicParsing="false" onAction="#modificaSintomo" prefHeight="26.0" prefWidth="99.0" styleClass="button-modifiche" text="Modifica" />
                     </children>
                  </HBox>
                  <HBox prefWidth="100.0" spacing="20.0">
                     <children>
                     <VBox spacing="5.0">
                        <children>
                           <Label styleClass="labelInput" text="Data" />
                           <DatePicker fx:id="dataField" prefWidth="350.0" promptText="Data" />
                        </children>
                     </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="labelInput" text="Ora" />
                              <Spinner fx:id="oraField" prefWidth="350.0" promptText="Ora" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="labelInput" text="Minuti" />
                              <Spinner fx:id="minutiField" prefWidth="350.0" promptText="Minuti" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
                  <VBox spacing="5.0">
                     <children>
                        <Label styleClass="labelInput" text="Descrizione sintomo" />
                        <TextArea fx:id="descrizioneTextArea" prefHeight="100.0" promptText="Descrivi il Sintomo" />
                     </children>
                  </VBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" spacing="10" stylesheets="@../../css/input.css">
               <children>
                  <Button fx:id="annullaButton" mnemonicParsing="false" onAction="#annullaModifica" prefHeight="34.0" prefWidth="99.0" styleClass="button-annullaModifiche" text="Annulla" visible="false" />
                  <Button fx:id="confermaButton" mnemonicParsing="false" onAction="#InviaModifica" prefHeight="34.0" prefWidth="99.0" styleClass="button-modifiche" text="Conferma" visible="false" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" right="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
