<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="355.0" prefWidth="964.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardPatient.AddSintomoController">
   <children>
      <VBox prefHeight="392.0" prefWidth="964.0" spacing="20.0" style="-fx-padding: 20 30 20 0;">
         <children>
            <VBox spacing="20.0">
               <children>
                  <Label text="Consulta la lista di Sintomi comuni per aiutarti a descrivere il sintomo" textFill="#0078ff">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="SintomiBox" prefWidth="1000.0" promptText="Lista di possibili sintomi" />
                  <TextArea fx:id="descrizioneField" prefHeight="200.0" prefWidth="200.0" promptText="Descrivi il Sintomo" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER">
               <children>
                  <Button mnemonicParsing="false" onAction="#registraSintomo" prefHeight="35.0" prefWidth="200.0" style="-fx-background-color: #0078ff; -fx-background-radius: 20;" text="Registra Sintomo" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                  </Button>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="14.0" prefWidth="934.0">
               <children>
                  <Label fx:id="erroreLabel" alignment="CENTER" prefWidth="1000.0" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
