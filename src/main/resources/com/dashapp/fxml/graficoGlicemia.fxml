<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefWidth="1000.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.graficoGlicemiaController">
   <children>
      <VBox alignment="TOP_CENTER" spacing="15.0">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="29.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="100.0" prefWidth="422.0">
                     <children>
                        <ComboBox fx:id="periodoBox" prefWidth="150.0" promptText="Selezionare Periodo" />
                     </children>
                  </VBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="1000.0" spacing="20.0">
                     <children>
                        <Button fx:id="andamentoGeneraleButton" mnemonicParsing="false" onAction="#popolaGraficoTotale" text="Andamento Generale" />
                        <Button fx:id="prePostButton" mnemonicParsing="false" onAction="#popolaGraficoPrePost" text="Pre e Post Pasti" />
                        <Button fx:id="tipoPastoButton" mnemonicParsing="false" onAction="#popolaGraficoPasti" text="In base al tipo di Pasto" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <LineChart fx:id="grafico" prefWidth="1000.0">
              <xAxis>
                <CategoryAxis fx:id="labelAsseX" label="Data e Ora" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis fx:id="labelAsseY" label="Valore Glicemia" side="LEFT" />
              </yAxis>
            </LineChart>
         </children>
      </VBox>
   </children>
</AnchorPane>
