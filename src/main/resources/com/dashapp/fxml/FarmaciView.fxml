<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<AnchorPane prefHeight="443.0" prefWidth="932.0" stylesheets="@../../css/Structure.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.FarmaciController">

   <children>
      <HBox prefHeight="424.0" prefWidth="892.0" spacing="20.0" AnchorPane.bottomAnchor="-28.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

         <!-- Immagine farmaco -->
         <ImageView fx:id="farmacoImageView" fitHeight="372.0" fitWidth="286.0" pickOnBounds="true" preserveRatio="false">
            <image>
               <Image url="@../images/famaci.PNG" />
            </image>
            <clip>
               <Rectangle arcHeight="40.0" arcWidth="40.0" height="372.0" width="286.0" />
            </clip>
         </ImageView>

         <!-- VBox contenitore dei controlli -->
         <VBox spacing="15.0" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS">

            <!-- Intestazione: Label Nome Farmaco + Bottone Modifica -->
            <HBox alignment="CENTER_LEFT">
               <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Nome Farmaco" textFill="#cb6ce6" />
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="modificaButton" mnemonicParsing="false" onAction="#modificaFarmaco"
                       prefHeight="26.0" prefWidth="99.0"
                       style="-fx-background-color: #bd1522; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Modifica" />
            </HBox>

            <!-- TextField Nome Farmaco -->
            <TextField fx:id="titoloTextField"
                       style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-weight: bold; -fx-font-size: 26px;" />

            <!-- Linea divisoria -->
            <Separator prefWidth="634.0" />

            <!-- Label Descrizione Farmaco -->
            <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Descrizione Farmaco" textFill="#cb6ce6" />

            <!-- TextArea Descrizione -->
            <TextArea fx:id="descrizioneTextArea"
                      prefHeight="200.0" prefWidth="586.0"
                      style="-fx-background-color: transparent; -fx-border-color: transparent; -fx-font-size: 16px;"
                      VBox.vgrow="NEVER" />

            <!-- Bottoni -->
            <HBox alignment="CENTER_RIGHT" spacing="10">
               <Region HBox.hgrow="ALWAYS" />
               <Button fx:id="annullaButton" mnemonicParsing="false" onAction="#annullaModifica"
                       prefHeight="34.0" prefWidth="99.0"
                       style="-fx-background-color: #a0a0a0; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Annulla" visible="false" />
               <Button fx:id="confermaButton" mnemonicParsing="false" onAction="#InviaModifica"
                       prefHeight="34.0" prefWidth="99.0"
                       style="-fx-background-color: #cb6ce6; -fx-background-radius: 20; -fx-text-fill: white; -fx-font-weight: bold;"
                       text="Conferma" visible="false" />
            </HBox>

         </VBox>
      </HBox>
   </children>
</AnchorPane>
