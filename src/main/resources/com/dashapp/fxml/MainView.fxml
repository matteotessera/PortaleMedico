<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="mainContainer" prefHeight="600" prefWidth="1000" style="     -fx-background-image: url('https://media-public.canva.com/BO16k/MAE-xKBO16k/1/s2.jpg');     -fx-background-repeat: no-repeat;     -fx-background-size: cover;     -fx-background-position: center center;" stylesheets="@../css/Structure.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.MainController">
    <left>
        <VBox fx:id="sidebarVBox" prefHeight="550.0" prefWidth="161.0" styleClass="sidebar-vbox">
            <padding>
                <Insets />
            </padding>
            <Accordion fx:id="sidebarAccordion" prefHeight="177.0" prefWidth="130.0">
                <panes>
                    <TitledPane expanded="false" text="Medici">
                        <VBox>
                            <Button styleClass="sidebar-button" text="Crea medico" />
                            <Button styleClass="sidebar-button" text="Da sistemare medico" />
                        </VBox>
                        <opaqueInsets>
                            <Insets />
                        </opaqueInsets>
                    </TitledPane>

                    <TitledPane expanded="false" prefWidth="144.0" text="Pazienti">
                        <VBox spacing="10">
                            <Button styleClass="sidebar-button" text="Crea medico" />
                            <Button styleClass="sidebar-button" text="Da sistemare medico" />
                        </VBox>
                    </TitledPane>

                    <TitledPane expanded="false" text="Farmaci">
                        <VBox spacing="10">
                            <Button styleClass="sidebar-button" text="Crea medico" />
                            <Button styleClass="sidebar-button" text="Da sistemare medico" />
                        </VBox>
                    </TitledPane>
                </panes>
            </Accordion>
        </VBox>
    </left>

    <center>
        <StackPane fx:id="stackPane" style="-fx-border-image-repeat: no repeat; -fx-background-size: cover; -fx-background-position: center center;" />
    </center>

    <top>
        <VBox fx:id="navBarContainer" style="-fx-pref-height: 80; -fx-background-color: #1e3746;" styleClass="nav-container" BorderPane.alignment="CENTER">
         <children>
             <HBox alignment="CENTER_LEFT" prefHeight="130.0" prefWidth="1000.0" spacing="10.0">
                 <padding>
                     <Insets bottom="0" left="20" right="30" top="0" />
                 </padding>
                 <children>
                     <!-- Logo a sinistra -->
                     <ImageView fitHeight="55.0" fitWidth="237.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@../images/logo.png" />
                         </image>
                     </ImageView>

                     <!-- Spaziatore elastico: senza larghezza fissa, solo hgrow -->
                     <Region prefHeight="80.0" prefWidth="470.0" HBox.hgrow="ALWAYS" />

                     <!-- HBox con Logout e icona profilo a destra -->
                     <HBox alignment="CENTER_RIGHT" prefHeight="80.0" prefWidth="232.0" spacing="20.0">
                         <children>
                             <!-- Bottone Logout -->
                             <Label fx:id="logoutLabel" onMouseClicked="#handleLogoutClick" textFill="WHITE">
                                 <font>
                                     <Font name="System Bold" size="16.0" />
                                 </font>
                             </Label>


                             <ImageView fx:id="messageButton" fitHeight="28.0" fitWidth="28.0" pickOnBounds="true" preserveRatio="true" visible="false">
                                 <image>
                                     <Image url="@../images/message.png" />
                                 </image>
                             </ImageView>

                             <StackPane fx:id="utenteCirclePane" visible="false">
                                 <children>
                                     <Circle fx:id="cerchioNavbar" fill="WHITE" radius="19.0" stroke="WHITE" strokeType="INSIDE" />
                                     <Label fx:id="utenteLabel" textFill="BLACK">
                                         <font>
                                             <Font name="System Bold" size="16.0" />
                                         </font>
                                     </Label>
                                 </children>
                             </StackPane>

                         </children>
                     </HBox>
                 </children>
             </HBox>
         </children></VBox>
    </top>

</BorderPane>
