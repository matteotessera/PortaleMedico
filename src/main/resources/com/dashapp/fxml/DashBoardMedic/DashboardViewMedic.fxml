<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardMedico.DashboardMedicController">
    <content>
<VBox prefWidth="713.0" spacing="0">

    <!-- HEADER FISSO -->
    <VBox prefHeight="214.0" prefWidth="674.0" spacing="15" style="-fx-background-color: #e9f9f9; -fx-background-radius: 0 0 20 20; -fx-padding: 20;">
        <children>
            <HBox alignment="CENTER_LEFT" spacing="20">
                <StackPane fx:id="utenteCirclePane" visible="false">
                    <children>
                        <Circle fx:id="cerchioNavbar" fill="WHITE" radius="30.0" stroke="WHITE" strokeType="INSIDE" />
                        <Label fx:id="utenteLabel" textFill="#1e3746">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Label>
                    </children>
                </StackPane>
                <VBox alignment="CENTER_LEFT">
                    <Label contentDisplay="BOTTOM" style="-fx-text-fill: #1e3746;" text="Benvenuto">
                        <font>
                            <Font name="Roboto Bold" size="18.0" />
                        </font>
                    </Label>
                    <Label fx:id="doctorName" alignment="TOP_LEFT" style="-fx-text-fill: #1e3746">
                        <font>
                            <Font name="Roboto Black" size="25.0" />
                        </font>
                        <padding>
                            <Insets top="-5.0" />
                        </padding>
                    </Label>
                </VBox>
            </HBox>

            <Region VBox.vgrow="ALWAYS" />

            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <!-- Quadrato stondato con immagine -->
                    <StackPane>
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" height="50.0" width="50.0" />
                        <ImageView fx:id="iconaImageView" fitHeight="20.0" fitWidth="20.0">
                     <image>
                        <Image url="@../../images/patient.png" />
                     </image></ImageView>
                    </StackPane>

                    <!-- Testi a fianco -->
                    <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="67.0">
                        <Label fx:id="numeroPazienti">
                            <font>
                                <Font name="Roboto Black" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="descrizioneLabel" prefHeight="20.0" prefWidth="63.0" text="Pazienti">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <!-- Quadrato stondato con immagine -->
                    <StackPane>
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" height="50.0" width="50.0" />
                        <ImageView fx:id="iconaImageView" fitHeight="20.0" fitWidth="20.0">
                     <image>
                        <Image url="@../../images/farmaco.png" />
                     </image></ImageView>
                    </StackPane>

                    <!-- Testi a fianco -->
                    <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="67.0">
                        <Label fx:id="numeroFarmaci">
                            <font>
                                <Font name="Roboto Black" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="descrizioneLabel" text="Farmaci">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" spacing="10">
                    <!-- Quadrato stondato con immagine -->
                    <StackPane>
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" height="50.0" width="50.0" />
                        <ImageView fx:id="iconaImageView" fitHeight="20.0" fitWidth="20.0">
                     <image>
                        <Image url="@../../images/terapia.png" />
                     </image></ImageView>
                    </StackPane>

                    <!-- Testi a fianco -->
                    <VBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="67.0">
                        <Label fx:id="numeroTerapie">
                            <font>
                                <Font name="Roboto Black" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="descrizioneLabel" text="Terapie">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>

                <HBox alignment="CENTER_LEFT" onMouseClicked="#mostraMessaggi" spacing="10">
                    <!-- Quadrato stondato con immagine -->
                    <StackPane>
                        <Rectangle arcHeight="20" arcWidth="20" fill="WHITE" height="50.0" width="50.0" />
                        <ImageView fx:id="iconaImageView" fitHeight="20.0" fitWidth="20.0">
                           <image>
                              <Image url="@../../images/messaggi.png" />
                           </image></ImageView>
                    </StackPane>

                    <!-- Testi a fianco -->
                    <VBox alignment="CENTER_LEFT">
                        <Label fx:id="numeroMessaggi">
                            <font>
                                <Font name="Roboto Black" size="24.0" />
                            </font>
                        </Label>
                        <Label fx:id="descrizioneLabel" text="Messaggi">
                            <font>
                                <Font name="Roboto Medium" size="14.0" />
                            </font>
                        </Label>
                    </VBox>
                </HBox>
            <VBox.margin>
               <Insets />
            </VBox.margin>
                <!-- altre icone statistiche qui -->
            </HBox>
        </children>
      <VBox.margin>
         <Insets left="20.0" right="20.0" top="20.0" />
      </VBox.margin>
    </VBox>

    <!-- CONTENUTO VARIABILE -->
    <StackPane fx:id="mainContent" VBox.vgrow="ALWAYS">
                <GridPane fx:id="dashboardGrid" hgap="20.0" maxWidth="Infinity" vgap="20">

                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>

                    <!-- CARD PAZIENTI -->
                    <VBox prefWidth="327.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 6); -fx-border-width: 2; -fx-padding: 20;" GridPane.rowIndex="1">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fx:id="patientsCardIcon" fitHeight="30.0" fitWidth="30.0">
                                    <image>
                                        <Image url="@../../images/patient.png" />
                                    </image>
                                </ImageView>
                                <Label text="Pazienti">
                                    <font>
                                        <Font name="Roboto Black" size="20.0" />
                                    </font>
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                                </Label>
                            </HBox>
                            <Label text="Gestione pazienti" wrapText="true">
                                <VBox.margin>
                                    <Insets left="42.0" />
                                </VBox.margin>
                                <font>
                                    <Font size="15.0" />
                                </font></Label>

                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <children>
                                    <Button mnemonicParsing="false" onMouseClicked="#listaPazienti" prefHeight="40" prefWidth="120" style="-fx-background-color: #ff914d; -fx-border-color: #ff914d; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Vedi">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Button>

                                    <Button mnemonicParsing="false" onMouseClicked="#assegnazioneMedPaz" prefHeight="40" style="-fx-background-color: #ff914d; -fx-border-color: #ff914d; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Prendi in carico">
                              <padding>
                                 <Insets left="20.0" right="20.0" />
                              </padding></Button>

                                </children>
                                <VBox.margin>
                                    <Insets top="25.0" />
                                </VBox.margin>
                                <padding>
                                    <Insets left="42.0" />
                                </padding>
                            </HBox>
                            <AnchorPane fx:id="overlayPanePazienti" />
                        </children>
                    </VBox>

                    <!-- CARD FARMACI -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 6); -fx-border-width: 2; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fx:id="medsCardIcon" fitHeight="30.0" fitWidth="30.0">
                                    <image>
                                        <Image url="@../../images/farmaco.png" />
                                    </image>
                                </ImageView>
                                <Label text="Farmaci">
                                    <font>
                                        <Font name="Roboto Black" size="20.0" />
                                    </font>
                                </Label>
                            </HBox>
                            <Label text="Gestione farmaci" wrapText="true">
                                <VBox.margin>
                                    <Insets left="42.0" />
                                </VBox.margin>
                                <font>
                                    <Font size="15.0" />
                                </font></Label>

                            <HBox alignment="CENTER_LEFT" prefWidth="249.0" spacing="10">
                                <children>
                                    <Button mnemonicParsing="false" onMouseClicked="#listaFarmaci" prefHeight="40" prefWidth="120" style="-fx-background-color: #cb6ce6; -fx-border-color: #cb6ce6; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Vedi">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Button>

                                    <Button mnemonicParsing="false" onMouseClicked="#aggiungiFarmaco" prefHeight="40" prefWidth="120" style="-fx-background-color: #cb6ce6; -fx-border-color: #cb6ce6; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Aggiungi" />

                                </children>
                                <VBox.margin>
                                    <Insets top="25.0" />
                                </VBox.margin>
                                <padding>
                                    <Insets left="42.0" />
                                </padding>
                            </HBox>
                            <AnchorPane fx:id="overlayPaneFarmaci" />
                        </children>
                    </VBox>

                    <!-- CARD TERAPIE: occupa entrambe le colonne -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 20, 0, 0, 6); -fx-border-width: 2; -fx-padding: 20;" GridPane.columnSpan="2" GridPane.rowIndex="2">
                        <children>
                            <HBox alignment="CENTER_LEFT" spacing="10">
                                <ImageView fx:id="therapiesCardIcon" fitHeight="30.0" fitWidth="30.0">
                                    <image>
                                        <Image url="@../../images/terapia.png" />
                                    </image>
                                </ImageView>
                                <Label text="Terapie">
                                    <font>
                                        <Font name="Roboto Black" size="20.0" />
                                    </font>
                                </Label>
                            </HBox>
                            <Label text="Gestione terapie" wrapText="true">
                                <VBox.margin>
                                    <Insets left="42.0" />
                                </VBox.margin>
                                <font>
                                    <Font name="Roboto Regular" size="15.0" />
                                </font>
                            </Label>

                            <HBox alignment="CENTER_LEFT" prefWidth="249.0" spacing="10">
                                <children>
                                    <Button mnemonicParsing="false" onMouseClicked="#vediTerapia" prefHeight="40" prefWidth="120" style="-fx-background-color: #7ed957; -fx-border-color: #7ed957; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Vedi">
                                        <font>
                                            <Font name="System Bold" size="12.0" />
                                        </font></Button>

                                    <Button mnemonicParsing="false" onMouseClicked="#aggiungiTerapia" prefHeight="40" prefWidth="120" style="-fx-background-color: #7ed957; -fx-border-color: #7ed957; -fx-border-width: 1; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 15; -fx-border-radius: 15; -fx-cursor: hand; -fx-font-family: 'Roboto Medium';" text="Aggiungi" />

                                </children>
                                <VBox.margin>
                                    <Insets top="25.0" />
                                </VBox.margin>
                                <padding>
                                    <Insets left="42.0" />
                                </padding>
                            </HBox>
                            <AnchorPane fx:id="overlayPaneTerapia" />
                        </children>
                    </VBox>
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50" />
                        <ColumnConstraints percentWidth="50" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                </GridPane>
    </StackPane>

</VBox>

    </content>
</ScrollPane>
