<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<ScrollPane fitToWidth="true" hbarPolicy="AS_NEEDED" minHeight="-Infinity" minWidth="-Infinity" pannable="true" vbarPolicy="ALWAYS" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardMedico.DashboardMedicController">
   <content>
      <GridPane hgap="20.0" prefHeight="800.0" prefWidth="1000" vgap="20">

         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>


         <!-- HEADER BLU: occupa entrambe le colonne -->
         <VBox spacing="15" style="-fx-background-color: #34bccc; -fx-background-radius: 20; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="20">
                  <ImageView fx:id="profileImage" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/profile.png" />
                     </image>
                  </ImageView>
                  <VBox alignment="CENTER_LEFT">
                     <Label contentDisplay="BOTTOM" style="-fx-text-fill: white;" text="Benvenuto">
                        <font>
                           <Font name="System Bold" size="16" />
                        </font>
                     </Label>
                     <Label fx:id="doctorName" alignment="TOP_LEFT" style="-fx-text-fill: white;" text="Dr. Emanuele Girardello">
                        <font>
                           <Font name="System Bold" size="20" />
                        </font>
                     </Label>
                  </VBox>
               </HBox>

               <HBox alignment="CENTER_LEFT" prefHeight="68.0" prefWidth="1346.0" spacing="30" translateX="14.0">
                  <VBox alignment="CENTER" prefHeight="72.0" prefWidth="96.0" spacing="5">
                     <ImageView fitHeight="46.0" fitWidth="54.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                           <Image url="@../../images/mask.png" />
                        </image>
                     </ImageView>
                     <Label prefHeight="18.0" prefWidth="80.0" style="-fx-text-fill: white;" text="5 Pazienti">
                        <font>
                           <Font size="15.0" />
                        </font></Label>
                  </VBox>
                  <VBox alignment="CENTER" spacing="5">
                     <ImageView fx:id="therapiesIcon" fitHeight="40" fitWidth="40">
                        <image>
                           <Image url="@../../images/therapy.png" />
                        </image>
                     </ImageView>
                     <Label style="-fx-text-fill: white;" text="3 Terapie" />
                  </VBox>
                  <VBox alignment="CENTER" spacing="5">
                     <ImageView fx:id="messagesIcon" fitHeight="40" fitWidth="40">
                        <image>
                           <Image url="@../../images/chat.png" />
                        </image>
                     </ImageView>
                     <Label style="-fx-text-fill: white;" text="5 Messaggi" />
                  </VBox>
                  <ImageView fx:id="patientsIcon" fitHeight="40" fitWidth="40" />
               </HBox>
            </children>
         </VBox>

         <!-- CARD PAZIENTI -->
         <VBox prefHeight="235.0" prefWidth="376.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.rowIndex="1">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="patientsCardIcon" fitHeight="40.0" fitWidth="40.0">
                     <image>
                        <Image url="@../../images/patient.png" />
                     </image>
                  </ImageView>
                  <Label text="Pazienti" textFill="#ff914d">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                  </Label>
               </HBox>
               <Label text="Hai 5 pazienti presi in carico">
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="15.0" />
                  </font></Label>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="eyeIcon1" fitHeight="16.0" fitWidth="20">
                     <image>
                        <Image url="@../../images/occhioArancio.png" />
                     </image>
                  </ImageView>
                  <Label text="Vedi tutti i pazienti">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <padding>
                     <Insets left="50.0" />
                  </padding>
               </HBox>
               <HBox alignment="CENTER_LEFT" onMouseClicked="#showAddPazienti" spacing="10">
                  <ImageView fx:id="plusIcon1" fitHeight="20" fitWidth="20" onMouseClicked="#showAddPazienti">
                     <image>
                        <Image url="@../../images/piuArancio.png" />
                     </image>
                  </ImageView>
                  <Label text="Prendi in carico un paziente">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
               </HBox>
               <AnchorPane fx:id="overlayPanePazienti" />
            </children>
         </VBox>

         <!-- CARD FARMACI -->
         <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="medsCardIcon" fitHeight="40" fitWidth="40">
                     <image>
                        <Image url="@../../images/farmaco.png" />
                     </image>
                  </ImageView>
                  <Label text="Farmaci" textFill="#cb6ce6">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </HBox>
               <Label text="Hai 10 farmaci aggiunti">
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="15.0" />
                  </font></Label>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="eyeIcon2" fitHeight="16.0" fitWidth="20">
                     <image>
                        <Image url="@../../images/occhioViola.png" />
                     </image>
                  </ImageView>
                  <Label text="Vedi tutti i farmaci">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_LEFT" onMouseClicked="#showAddFarmaci" spacing="10">
                  <ImageView fx:id="plusIcon2" fitHeight="20.0" fitWidth="20" onMouseClicked="#showAddFarmaci">
                     <image>
                        <Image url="@../../images/piuViola.png" />
                     </image>
                  </ImageView>
                  <Label text="Aggiungi un farmaco">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
               </HBox>
               <AnchorPane fx:id="overlayPaneFarmaci" />
            </children>
         </VBox>

         <!-- CARD TERAPIE: occupa entrambe le colonne -->
         <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.columnSpan="2" GridPane.rowIndex="2">
            <children>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="therapiesCardIcon" fitHeight="40" fitWidth="40">
                     <image>
                        <Image url="@../../images/terapia.png" />
                     </image>
                  </ImageView>
                  <Label text="Terapie" textFill="#7ed957">
                     <font>
                        <Font name="System Bold" size="20.0" />
                     </font>
                  </Label>
               </HBox>
               <Label text="Hai 5 terapie da monitorare sui tuoi pazienti">
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
                  <font>
                     <Font size="15.0" />
                  </font></Label>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="eyeIcon3" fitHeight="16.0" fitWidth="20">
                     <image>
                        <Image url="@../../images/occhioVerde.png" />
                     </image>
                  </ImageView>
                  <Label text="Vedi tutte le terapie">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
               </HBox>
               <HBox alignment="CENTER_LEFT" spacing="10">
                  <ImageView fx:id="plusIcon3" fitHeight="20" fitWidth="20" onMouseClicked="#showAddTerapia">
                     <image>
                        <Image url="@../../images/piuVerde.png" />
                     </image>
                  </ImageView>
                  <Label onMouseClicked="#showAddTerapia" text="Aggiungi una terapia">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
                  <VBox.margin>
                     <Insets left="50.0" />
                  </VBox.margin>
               </HBox>
               <AnchorPane fx:id="overlayPaneTerapia" />
            </children>
         </VBox>
         <columnConstraints>
            <ColumnConstraints maxWidth="492.0" minWidth="385.0" prefWidth="468.0" />
            <ColumnConstraints maxWidth="555.0" minWidth="448.0" prefWidth="472.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>

      </GridPane>
   </content>
</ScrollPane>
