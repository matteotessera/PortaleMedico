<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="363.0" prefWidth="489.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardMedico.AddTerapiaController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="33.0" layoutY="32.0" prefHeight="251.0" prefWidth="422.0" spacing="10.0">
         <children>
            <Label alignment="CENTER" text="AGGIUNGERE I DATI SULLA TERAPIA">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <DatePicker fx:id="inizioField" promptText="Data di inizio Terapia" HBox.hgrow="ALWAYS" />
                  <DatePicker fx:id="fineField" promptText="Data di fine Terapia" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="farmacoField" promptText="Farmaco" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <TextField fx:id="nrAssunzioniField" promptText="Nr di Assunzioni Giornaliere" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="doseGiornalieraField" promptText="Dose Giornaliera" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <TextField fx:id="indicazioniFarmacoField" promptText="Indicazioni sul farmaco" />
            <TextField fx:id="noteTerapiaFied" promptText="Note sulla terapia" />
            <Button fx:id="registraTerapiaButton" alignment="CENTER" mnemonicParsing="false" onAction="#registraTerapia" prefWidth="300.0" text="Registra Terapia" />
            <Button fx:id="esci" mnemonicParsing="false" onAction="#exit" prefWidth="200.0" text="Esci" />
         </children>
         <padding>
            <Insets top="30.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
