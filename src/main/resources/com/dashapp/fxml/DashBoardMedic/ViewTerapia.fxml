<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dashapp.controller.dashboardMedico.ViewTerapiaController">

   <children>
      <HBox spacing="40.0">
         <children>
            <VBox stylesheets="@../../css/input.css">
               <children>
                  <Label text="Terapia" textFill="#7ed957">
                     <font>
                        <Font name="Roboto Black" size="14.0" />
                     </font>
                     <VBox.margin>
                        <Insets left="30.0" top="20.0" />
                     </VBox.margin>
                  </Label>
                  <VBox spacing="5.0" stylesheets="@../../css/input.css">
                     <children>
                        <Label styleClass="labelInput" text="Seleziona terapia" />
                        <ComboBox fx:id="sceltaTerapia" onAction="#sceltaTerapia" prefWidth="200.0" />
                     </children>
                     <padding>
                        <Insets left="30.0" top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
            <Separator orientation="VERTICAL" prefHeight="200.0" />
            <VBox fx:id="VboxTerapia" spacing="20.0" style="-fx-padding: 20 30 20 0;" stylesheets="@../../css/input.css">
               <HBox spacing="10" stylesheets="@../../css/input.css">
                  <children>
                     <!-- Sezione paziente e farmaco -->
                     <Text fill="#7ed957" style="-fx-text-fill: #ff914d;" text="Dati farmaco">
                        <font>
                           <Font name="Roboto Black" size="14.0" />
                        </font>
                     </Text>

                     <Region HBox.hgrow="ALWAYS" />

                     <Button fx:id="modificaButton" mnemonicParsing="false" onMouseClicked="#modifica" styleClass="button-modifiche" text="Modifica" />
                  </children>
               </HBox>
      
                     <VBox spacing="5" GridPane.columnIndex="0">
                        <Label styleClass="labelInput" text="Farmaco" />
                        <ComboBox fx:id="sceltaFarmaco" maxWidth="Infinity" promptText="Seleziona farmaco" />
                     </VBox>

               <Separator />

               <Text fill="#7ed957" style="-fx-text-fill: #ff914d;" text="Dettagli terapia">
                  <font>
                     <Font name="Roboto Black" size="14.0" />
                  </font>
               </Text>
      
               <FlowPane alignment="TOP_LEFT" hgap="15" prefWrapLength="600" vgap="15">
      
                  <children>
                     <VBox prefWidth="200.0" spacing="5">
                        <Label styleClass="labelInput" text="Numero assunzioni giornaliere" />
                        <TextField fx:id="nAssunzioniField" maxWidth="Infinity" promptText="Inserisci n. assunzioni" />
                     </VBox>
      
                     <VBox prefWidth="200.0" spacing="5">
                        <Label styleClass="labelInput" text="Dose" />
                        <TextField fx:id="doseField" maxWidth="Infinity" promptText="Inserisci dose" />
                     </VBox>
      
                     <VBox prefWidth="200.0" spacing="5">
                        <Label styleClass="labelInput" text="Data inizio terapia" />
                        <DatePicker fx:id="dataInizioPicker" prefHeight="30.0" prefWidth="217.0" />
                     </VBox>
      
                     <VBox prefWidth="200.0" spacing="5">
                        <Label styleClass="labelInput" text="Data fine terapia" />
                        <DatePicker fx:id="dataFinePicker" prefHeight="30.0" prefWidth="245.0" />
                     </VBox>
                  </children>
      
               </FlowPane>
      
               <Separator />

               <VBox spacing="20.0">

                  <VBox spacing="5">
                     <Label styleClass="labelInput" text="Note" />
                     <TextArea fx:id="note" prefHeight="61.0" prefWidth="874.0" />
                  </VBox>
               </VBox>
               <HBox alignment="CENTER" spacing="10.0" stylesheets="@../../css/input.css">
                  <children>
            
                     <!-- Bottone -->
                     <Button fx:id="annullaButton" onMouseClicked="#annulla" styleClass="button-annullaModifiche" text="Annulla" textFill="#7ed957" />

                     <Button fx:id="confermaButton" onMouseClicked="#inviaModifiche" styleClass="button-modifiche" text="Conferma modifche" textFill="#7ed957" />
                  </children>
               </HBox>
      
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
