<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<GridPane hgap="20.0" prefHeight="800.0" prefWidth="1000" vgap="20" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

   <padding>
      <Insets bottom="20" left="20" right="20" top="20" />
   </padding>

   <columnConstraints>
      <ColumnConstraints percentWidth="50" />
      <ColumnConstraints percentWidth="50" />
   </columnConstraints>

   <rowConstraints>
      <RowConstraints percentHeight="25" />
      <RowConstraints percentHeight="37.5" />
      <RowConstraints percentHeight="37.5" />
   </rowConstraints>

   <!-- HEADER BLU: occupa entrambe le colonne -->
   <VBox spacing="15" style="-fx-background-color: #34bccc; -fx-background-radius: 20; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="20">
            <Circle fill="DODGERBLUE" radius="35.0" stroke="WHITE" strokeType="INSIDE" strokeWidth="0.0" />
            <VBox alignment="CENTER_LEFT" spacing="5">
               <Label style="-fx-text-fill: white;" text="Benvenuto">
                  <font>
                     <Font name="System Bold" size="16" />
                  </font>
               </Label>
               <Label fx:id="doctorName" style="-fx-text-fill: white;" text="Dr. Emanuele Girardello">
                  <font>
                     <Font name="System Bold" size="20" />
                  </font>
               </Label>
            </VBox>
         </HBox>

         <HBox alignment="CENTER_LEFT" spacing="30">
            <VBox alignment="CENTER" spacing="5">
               <Label style="-fx-text-fill: white;" text="5 Pazienti" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
               <ImageView fx:id="therapiesIcon" fitHeight="40" fitWidth="40" />
               <Label style="-fx-text-fill: white;" text="3 Terapie" />
            </VBox>
            <VBox alignment="CENTER" spacing="5">
               <ImageView fx:id="messagesIcon" fitHeight="40" fitWidth="40" />
               <Label style="-fx-text-fill: white;" text="5 Messaggi" />
            </VBox>
            <ImageView fx:id="patientsIcon" fitHeight="40" fitWidth="40" />
         </HBox>
      </children>
   </VBox>

   <!-- CARD PAZIENTI -->
   <VBox prefHeight="218.0" prefWidth="470.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.rowIndex="1">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Circle fill="DODGERBLUE" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
            <Label text="Pazienti">
               <font>
                  <Font name="System Bold" size="18" />
               </font>
            </Label>
         </HBox>
         <Label text="Hai 5 pazienti presi in carico" />
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="eyeIcon1" fitHeight="20" fitWidth="20" />
            <Label text="Vedi tutti i pazienti" />
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="plusIcon1" fitHeight="20" fitWidth="20" />
            <Label text="Prendi in carico un paziente" />
         </HBox>
      </children>
   </VBox>

   <!-- CARD FARMACI -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.columnIndex="1" GridPane.rowIndex="1">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Circle fill="DODGERBLUE" radius="20.0" stroke="BLACK" strokeType="INSIDE" strokeWidth="0.0" />
            <ImageView fx:id="medsCardIcon" fitHeight="40" fitWidth="40" />
            <Label text="Farmaci">
               <font>
                  <Font name="System Bold" size="18" />
               </font>
            </Label>
         </HBox>
         <Label text="Hai 10 farmaci aggiunti" />
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="eyeIcon2" fitHeight="20" fitWidth="20" />
            <Label text="Vedi tutti i farmaci" />
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="plusIcon2" fitHeight="20" fitWidth="20" />
            <Label text="Aggiungi un farmaco" />
         </HBox>
      </children>
   </VBox>

   <!-- CARD TERAPIE: occupa entrambe le colonne -->
   <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="2">
      <children>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <Circle fill="DODGERBLUE" radius="20.0" strokeType="INSIDE" strokeWidth="0.0">
               <stroke>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop>
                           <color>
                              <Color />
                           </color>
                        </Stop>
                        <Stop offset="1.0">
                           <color>
                              <Color red="1.0" green="1.0" blue="1.0" />
                           </color>
                        </Stop>
                     </stops>
                  </LinearGradient>
               </stroke></Circle>
            <Label text="Terapie">
               <font>
                  <Font name="System Bold" size="18" />
               </font>
            </Label>
         </HBox>
         <Label text="Hai 5 terapie da monitorare sui tuoi pazienti" />
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="eyeIcon3" fitHeight="20" fitWidth="20" />
            <Label text="Vedi tutte le terapie" />
         </HBox>
         <HBox alignment="CENTER_LEFT" spacing="10">
            <ImageView fx:id="plusIcon3" fitHeight="20" fitWidth="20" />
            <Label text="Aggiungi una terapia" />
         </HBox>
      </children>
   </VBox>

</GridPane>
