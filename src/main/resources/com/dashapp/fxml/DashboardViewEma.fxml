<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1"
          prefHeight="800" prefWidth="1000"
          hgap="20" vgap="20">

   <padding>
      <Insets top="20" right="20" bottom="20" left="20"/>
   </padding>

   <columnConstraints>
      <ColumnConstraints percentWidth="50"/>
      <ColumnConstraints percentWidth="50"/>
   </columnConstraints>

   <rowConstraints>
      <RowConstraints percentHeight="25"/>
      <RowConstraints percentHeight="37.5"/>
      <RowConstraints percentHeight="37.5"/>
   </rowConstraints>

   <!-- HEADER BLU: occupa entrambe le colonne -->
   <VBox GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2" spacing="15"
         style="-fx-background-color: #34bccc; -fx-background-radius: 20; -fx-padding: 20;">
      <children>
         <HBox spacing="20" alignment="CENTER_LEFT">
            <ImageView fx:id="profileImage" fitHeight="80" fitWidth="80" pickOnBounds="true" preserveRatio="true"/>
            <VBox spacing="5" alignment="CENTER_LEFT">
               <Label style="-fx-text-fill: white;" text="Benvenuto">
                  <font>
                     <Font name="System Bold" size="16"/>
                  </font>
               </Label>
               <Label fx:id="doctorName" style="-fx-text-fill: white;" text="Dr. Emanuele Girardello">
                  <font>
                     <Font name="System Bold" size="20"/>
                  </font>
               </Label>
            </VBox>
         </HBox>

         <HBox spacing="30" alignment="CENTER_LEFT">
            <VBox alignment="CENTER" spacing="5">
               <Label style="-fx-text-fill: white;" text="5 Pazienti"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5">
               <ImageView fx:id="therapiesIcon" fitHeight="40" fitWidth="40"/>
               <Label style="-fx-text-fill: white;" text="3 Terapie"/>
            </VBox>
            <VBox alignment="CENTER" spacing="5">
               <ImageView fx:id="messagesIcon" fitHeight="40" fitWidth="40"/>
               <Label style="-fx-text-fill: white;" text="5 Messaggi"/>
            </VBox>
            <ImageView fx:id="patientsIcon" fitHeight="40" fitWidth="40"/>
         </HBox>
      </children>
   </VBox>

   <!-- CARD PAZIENTI -->
   <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" spacing="10"
         style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;">
      <children>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="patientsCardIcon" fitHeight="40" fitWidth="40"/>
            <Label text="Pazienti">
               <font>
                  <Font name="System Bold" size="18"/>
               </font>
            </Label>
         </HBox>
         <Label text="Hai 5 pazienti presi in carico"/>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="eyeIcon1" fitHeight="20" fitWidth="20"/>
            <Label text="Vedi tutti i pazienti"/>
         </HBox>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="plusIcon1" fitHeight="20" fitWidth="20"/>
            <Label text="Prendi in carico un paziente"/>
         </HBox>
      </children>
   </VBox>

   <!-- CARD FARMACI -->
   <VBox GridPane.rowIndex="1" GridPane.columnIndex="1" spacing="10"
         style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;">
      <children>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="medsCardIcon" fitHeight="40" fitWidth="40"/>
            <Label text="Farmaci">
               <font>
                  <Font name="System Bold" size="18"/>
               </font>
            </Label>
         </HBox>
         <Label text="Hai 10 farmaci aggiunti"/>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="eyeIcon2" fitHeight="20" fitWidth="20"/>
            <Label text="Vedi tutti i farmaci"/>
         </HBox>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="plusIcon2" fitHeight="20" fitWidth="20"/>
            <Label text="Aggiungi un farmaco"/>
         </HBox>
      </children>
   </VBox>

   <!-- CARD TERAPIE: occupa entrambe le colonne -->
   <VBox GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2" spacing="10"
         style="-fx-background-color: white; -fx-background-radius: 20; -fx-border-radius: 20; -fx-border-color: #eeeeee; -fx-border-width: 2; -fx-padding: 20;">
      <children>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="therapiesCardIcon" fitHeight="40" fitWidth="40"/>
            <Label text="Terapie">
               <font>
                  <Font name="System Bold" size="18"/>
               </font>
            </Label>
         </HBox>
         <Label text="Hai 5 terapie da monitorare sui tuoi pazienti"/>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="eyeIcon3" fitHeight="20" fitWidth="20"/>
            <Label text="Vedi tutte le terapie"/>
         </HBox>
         <HBox spacing="10" alignment="CENTER_LEFT">
            <ImageView fx:id="plusIcon3" fitHeight="20" fitWidth="20"/>
            <Label text="Aggiungi una terapia"/>
         </HBox>
      </children>
   </VBox>

</GridPane>
